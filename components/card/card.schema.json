{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "card",
  "label": "Card",
  "version": "1.0.0",
  "category": "content",
  "icon": "<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"1\" stroke-linecap=\"round\" stroke-linejoin=\"round\"><rect x=\"3\" y=\"3\" width=\"18\" height=\"18\" rx=\"2\"></rect><line x1=\"3\" y1=\"9\" x2=\"21\" y2=\"9\"></line><line x1=\"7\" y1=\"13\" x2=\"17\" y2=\"13\"></line><line x1=\"7\" y1=\"17\" x2=\"14\" y2=\"17\"></line></svg>",
  "fields": [
    {
      "name": "title",
      "type": "text",
      "label": "Title",
      "description": "Card title or heading",
      "default": "Card Title",
      "required": true,
      "validation": {
        "minLength": 1,
        "maxLength": 100
      }
    },
    {
      "name": "description",
      "type": "textarea",
      "label": "Description",
      "description": "Card body text",
      "default": "",
      "required": false,
      "validation": {
        "maxLength": 500
      }
    },
    {
      "name": "image",
      "type": "image",
      "label": "Image",
      "description": "Optional card image",
      "default": "",
      "required": false
    },
    {
      "name": "image_alt",
      "type": "text",
      "label": "Image Alt Text",
      "description": "Accessibility description for the image",
      "default": "",
      "required": false
    },
    {
      "name": "icon",
      "type": "text",
      "label": "Icon",
      "description": "Icon name or emoji to display instead of image",
      "default": "",
      "required": false
    },
    {
      "name": "link_url",
      "type": "url",
      "label": "Link URL",
      "description": "Makes the card clickable, linking to this URL",
      "default": "",
      "required": false
    },
    {
      "name": "link_text",
      "type": "text",
      "label": "Link Text",
      "description": "Text for the card's call-to-action link",
      "default": "Learn More",
      "required": false
    },
    {
      "name": "variant",
      "type": "select",
      "label": "Variant",
      "description": "Visual style of the card",
      "options": [
        {
          "value": "elevated",
          "label": "Elevated",
          "description": "Raised with shadow"
        },
        {
          "value": "bordered",
          "label": "Bordered",
          "description": "Flat with border"
        },
        {
          "value": "flat",
          "label": "Flat",
          "description": "No border or shadow"
        }
      ],
      "default": "elevated"
    },
    {
      "name": "image_position",
      "type": "select",
      "label": "Image Position",
      "description": "Where the image appears relative to content",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "top"
    },
    {
      "name": "image_ratio",
      "type": "select",
      "label": "Image Ratio",
      "description": "Aspect ratio for the card image",
      "options": [
        {
          "value": "auto",
          "label": "Auto"
        },
        {
          "value": "16:9",
          "label": "16:9 (Widescreen)"
        },
        {
          "value": "4:3",
          "label": "4:3 (Standard)"
        },
        {
          "value": "square",
          "label": "Square"
        }
      ],
      "default": "16:9"
    }
  ],
  "tokens_used": [
    "space-xs",
    "space-s",
    "space-m",
    "space-l",
    "text-s",
    "text-m",
    "heading-4",
    "radius-m",
    "shadow-m",
    "shadow-l",
    "neutral-ultra-light",
    "neutral-light",
    "neutral-semi-light",
    "neutral-dark",
    "neutral-semi-dark",
    "colorway-accent",
    "colorway-hard-contrast"
  ]
}
