{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "table",
  "label": "Table",
  "version": "1.0.0",
  "category": "data-display",
  "icon": "<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 24 24\" fill=\"none\" stroke=\"currentColor\" stroke-width=\"1\" stroke-linecap=\"round\" stroke-linejoin=\"round\"><rect x=\"3\" y=\"3\" width=\"18\" height=\"18\" rx=\"2\"/><line x1=\"3\" y1=\"9\" x2=\"21\" y2=\"9\"/><line x1=\"3\" y1=\"15\" x2=\"21\" y2=\"15\"/><line x1=\"9\" y1=\"3\" x2=\"9\" y2=\"21\"/></svg>",
  "tabs": [
    {
      "id": "structure",
      "label": "Structure"
    },
    {
      "id": "features",
      "label": "Features"
    },
    {
      "id": "empty",
      "label": "Empty State"
    }
  ],
  "fields": [
    {
      "name": "columns",
      "type": "array",
      "label": "Columns",
      "description": "Column definitions for the table",
      "tab": "structure",
      "required": true,
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string",
            "description": "Data property to display. Omit if using component."
          },
          "label": {
            "type": "string",
            "description": "Column header text"
          },
          "sortable": {
            "type": "boolean",
            "default": false,
            "description": "Whether column can be sorted"
          },
          "align": {
            "type": "string",
            "enum": [
              "left",
              "center",
              "right"
            ],
            "default": "left"
          },
          "width": {
            "type": "string",
            "description": "CSS width value (e.g., '200px', '20%', 'auto')"
          },
          "component": {
            "type": "object",
            "description": "Child component to render cell content",
            "properties": {
              "name": {
                "type": "string",
                "description": "Component name (e.g., 'badge', 'button')"
              },
              "props": {
                "type": "object",
                "description": "Props to pass. Use {field} syntax for row data interpolation (e.g., {status}, {user.name})"
              }
            }
          }
        }
      }
    },
    {
      "name": "data",
      "type": "array",
      "label": "Data",
      "description": "Array of row objects to display",
      "tab": "structure",
      "required": true,
      "runtime": true
    },
    {
      "name": "row_key",
      "type": "string",
      "label": "Row Key",
      "description": "Property to use as unique row identifier",
      "default": "id",
      "tab": "structure"
    },
    {
      "name": "sortable",
      "type": "boolean",
      "label": "Enable Sorting",
      "description": "Allow columns to be sorted",
      "default": false,
      "tab": "features"
    },
    {
      "name": "sort_by",
      "type": "string",
      "label": "Sort By",
      "description": "Currently sorted column key",
      "default": "",
      "tab": "features",
      "runtime": true
    },
    {
      "name": "sort_direction",
      "type": "string",
      "label": "Sort Direction",
      "enum": [
        "asc",
        "desc"
      ],
      "default": "asc",
      "tab": "features",
      "runtime": true
    },
    {
      "name": "selectable",
      "type": "boolean",
      "label": "Enable Selection",
      "description": "Show checkboxes for row selection",
      "default": false,
      "tab": "features"
    },
    {
      "name": "selected",
      "type": "array",
      "label": "Selected Rows",
      "description": "Array of selected row keys",
      "default": [],
      "tab": "features",
      "runtime": true
    },
    {
      "name": "actions",
      "type": "array",
      "label": "Row Actions",
      "description": "Action components to render for each row",
      "tab": "structure",
      "items": {
        "type": "object",
        "description": "Component reference for row action",
        "properties": {
          "name": {
            "type": "string",
            "description": "Component name (typically 'button')"
          },
          "props": {
            "type": "object",
            "description": "Props to pass. Use {field} syntax for row data interpolation (e.g., {id}, {edit_url})"
          }
        }
      }
    },
    {
      "name": "empty_icon",
      "type": "string",
      "label": "Empty State Icon",
      "description": "SVG icon for empty state",
      "tab": "empty"
    },
    {
      "name": "empty_title",
      "type": "string",
      "label": "Empty State Title",
      "description": "Heading when no data",
      "default": "No items found",
      "tab": "empty"
    },
    {
      "name": "empty_text",
      "type": "string",
      "label": "Empty State Text",
      "description": "Description when no data",
      "tab": "empty"
    },
    {
      "name": "empty_action",
      "type": "object",
      "label": "Empty State Action",
      "description": "Button component to show in empty state",
      "tab": "empty",
      "properties": {
        "name": {
          "type": "string",
          "description": "Component name (typically 'button')",
          "default": "button"
        },
        "props": {
          "type": "object",
          "description": "Props to pass to the button component"
        }
      }
    },
    {
      "name": "colorway",
      "type": "colorway",
      "label": "Colorway",
      "description": "Color scheme for this component",
      "default": "inherit"
    }
  ],
  "tokens_used": [
    "space-s",
    "space-m",
    "space-l",
    "text-s",
    "text-m",
    "border-s",
    "radius-m",
    "neutral-light",
    "neutral-ultra-light",
    "colorway-base",
    "colorway-hard-contrast"
  ]
}
